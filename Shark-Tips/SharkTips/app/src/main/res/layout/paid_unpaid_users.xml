<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/framePaidUsers"
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <Button
        android:layout_marginLeft="10dp"
        android:id="@+id/btnMoveToUnpaidUsers"
        android:text="» Move to unpaid users."
        android:background="@android:color/transparent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:text="Paid Users"
        android:textStyle="bold"
        android:textSize="22sp"
        android:textColor="#34a318"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <SearchView
        android:id="@+id/lblSearchPaidUsers"
        android:queryHint="Search..."
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ListView
        android:id="@+id/listPaidUsers"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </ListView>


</LinearLayout>

    </FrameLayout>


    <FrameLayout
        android:id="@+id/frameUnPaidUsers"
        android:visibility="invisible"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <Button
        android:layout_marginLeft="10dp"
        android:id="@+id/btnMoveToPaidUsers"
        android:text="» Move to paid users."
        android:background="@android:color/transparent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:text="UnPaid Users"
        android:textStyle="bold"
        android:textSize="22sp"
        android:textColor="#ad1818"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <SearchView
        android:id="@+id/lblSearchUnpaidUsers"
        android:queryHint="Search..."
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ListView
        android:id="@+id/listUnPaidUsers"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </ListView>


</LinearLayout>

    </FrameLayout>

</LinearLayout>