<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/framePaidUsers"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <Button
        android:id="@+id/btnMoveToUnpaidUsers"
        android:text=">paid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/lblShowPaidResult"
        android:visibility="invisible"
        android:layout_marginTop="10dp"
        android:gravity="center_horizontal"
        android:textStyle="bold"
        android:text="UPDATE"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


    <SearchView
        android:id="@+id/lblSearchPaidUsers"
        android:queryHint="Search..."
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ListView
        android:id="@+id/listPaidUsers"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </ListView>


</LinearLayout>

    </FrameLayout>


    <FrameLayout
        android:id="@+id/frameUnPaidUsers"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <Button
        android:id="@+id/btnMoveToPaidUsers"
        android:text=">unpaid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/lblShowUnpaidResult"
        android:visibility="invisible"
        android:layout_marginTop="10dp"
        android:gravity="center_horizontal"
        android:textStyle="bold"
        android:text="UPDATE"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


    <SearchView
        android:id="@+id/lblSearchUnpaidUsers"
        android:queryHint="Search..."
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ListView
        android:id="@+id/listUnPaidUsers"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </ListView>


</LinearLayout>

    </FrameLayout>

</LinearLayout>